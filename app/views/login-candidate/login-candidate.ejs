<script type="text/javascript">
  $("#login").on('click', (e) => {
    e.preventDefault();
    var docnumber = $("#docnumber").val();
    var doctype = $("#doctype").val();
    $.post('/student/login', {
      doctype: doctype,
      docnumber: docnumber
    });
  });
</script>
